{
  "compilerOptions": {
    "target": "ES2018",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "example"]
}