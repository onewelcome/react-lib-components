    "jest-junit": "^13.2.0",
    "lint-staged": "^12.4.1",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0",
    "rollup-plugin-styles": "^4.0.0",
    "sass": "^1.52.0",
    "size-limit": "^7.0.8",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4"
  }
