  "license": "Apache-2.0",
  "author": "OneWelcome B.V.",
  "main": "dist/index.js",
  "module": "dist/react-lib-components.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "build-storybook": "build-storybook",
    "dev": "npm-run-all -p start test:watch storybook",
    "lint": "dts lint",
    "prepare": "husky install && dts build",
    "size": "size-limit",
    "start": "dts watch",
    "prettier": "prettier --write --ignore-path .gitignore \"**/*.+(ts|tsx|scss|mdx)\"",
    "storybook": "start-storybook -p 6006",
    "test": "dts test --passWithNoTests",
    "test:watch": "dts test --passWithNoTests --watch"
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "engines": {
    "node": ">=16"
  },
  "size-limit": [
    {
      "path": "dist/react-lib-components.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-lib-components.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.18.0",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@storybook/addon-a11y": "^6.5.9",
